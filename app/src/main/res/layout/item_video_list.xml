<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="4dp">

        <com.maple.playerlibrary.player.VideoPlayer
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            tools:background="@drawable/icon_logo" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/font_14"
            android:textStyle="bold"
            tools:text="title" />

        <View
            android:id="@+id/view_line"
            style="@style/style_line"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:background="@drawable/icon_logo" />


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/color_text_gray"
                android:textSize="@dimen/font_12"
                tools:text="name" />


            <RelativeLayout
                android:id="@+id/rl_like"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_like" />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/iv_like"
                    android:layout_toEndOf="@id/iv_like"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/font_10"
                    tools:text="1" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_msg"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_msg" />

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/iv_msg"
                    android:layout_toEndOf="@id/iv_msg"
                    android:textColor="@color/color_text_gray"
                    android:textSize="@dimen/font_10"
                    tools:text="1" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:src="@drawable/icon_more" />
        </LinearLayout>


        <View
            android:id="@+id/view_gap"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/color_line" />
    </LinearLayout>
</layout>