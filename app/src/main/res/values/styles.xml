<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="NoTitleBarTheme">
        <item name="android:windowBackground">@drawable/layer_splash_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="style_checkbox_agree" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_box_agree</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogCommon" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/trans</item>
    </style>

    <style name="DialogBottom" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/StyleBottom</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/trans</item>
    </style>

    <style name="StyleBottom" parent="android:Animation" mce_bogus="1" >
        <item name="android:windowEnterAnimation">@anim/anim_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_down</item>
    </style>

    <style name="StyleCommon" parent="android:Animation" mce_bogus="1" >
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_out</item>
    </style>

    <style name="verify_text_style">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">41dp</item>
        <item name="android:background">@color/trans</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="verify_line_style">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/color_text_gray</item>
    </style>
</resources>
